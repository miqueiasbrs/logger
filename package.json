{
  "name": "@capybaracode/logger",
  "version": "2.0.0",
  "description": "A simple logger",
  "main": "./lib/logger.js",
  "types": "./lib/logger.d.ts",
  "type": "module",
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "dev": "nodemon -r dotenv/config --exec ts-node test/index.ts",
    "coverage": "jest --coverage",
    "build": "rm -rf lib && tsc -p . && mv dist/src lib && rm -rf dist",
    "local": "sudo npm i -g && awslocal",
    "publish": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miqueiasbrs/logger.git"
  },
  "keywords": [
    "logger",
    "tools"
  ],
  "engines": {
    "node": ">=18"
  },
  "author": "miqueiasbrs <miqueias@capybaracode.com.br> (https://capybaracode.com.br)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miqueiasbrs/logger/issues"
  },
  "homepage": "https://github.com/miqueiasbrs/logger#readme",
  "devDependencies": {
    "@types/jest": "29.5.6",
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "dotenv": "16.3.1",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.1.1",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-n": "16.2.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "jest": "29.7.0",
    "jest-sonar-reporter": "2.0.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
